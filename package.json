{
  "name": "@scouts/source",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "author": "Mateus Macedo Dos Anjos",
  "repository": {
    "type": "git",
    "url": "https://github.com/mateusmacedo/scouts.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.11 <21"
  },
  "scripts": {
    "clean": "rimraf .nx/cache dist coverage **/dist **/coverage || true",
    "build": "nx run-many -t build",
    "build:affected": "nx affected -t build",
    "build:fast": "nx affected -t build --parallel=5",
    "types": "nx run-many -t types",
    "types:affected": "nx affected -t types",
    "test": "nx run-many -t test",
    "test:affected": "nx affected -t test",
    "test:coverage": "nx run-many -t test --coverage",
    "lint": "nx run-many -t lint",
    "lint:affected": "nx affected -t lint",
    "format": "nx run-many -t format",
    "format:check": "nx run-many -t biome-check",
    "check-boundaries": "nx run-many -t check-boundaries",
    "dev:bff-nest": "nx serve bff-nest",
    "dev:user-go-service": "nx serve user-go-service",
    "registry:start": "nx run @scouts/source:local-registry",
    "registry:reset": "pnpm rimraf tmp/local-registry/storage && pnpm rimraf tmp/local-registry/.verdaccio-db || true",
    "release": "nx release",
    "release:dry-run": "nx release --dry-run",
    "release:version": "nx release version",
    "release:publish": "nx release publish",
    "release:verify": "pnpm format:check && pnpm lint:affected && pnpm test:affected",
    "validate": "pnpm format:check && pnpm lint && pnpm build:affected && pnpm test:affected"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/platform-express": "^10.0.2",
    "@nestjs/terminus": "^10.0.0",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nx-go/nx-go": "3.3.1",
    "@nx/eslint": "20.8.2",
    "@nx/eslint-plugin": "20.8.2",
    "@nx/jest": "20.8.2",
    "@nx/js": "20.8.2",
    "@nx/nest": "20.8.2",
    "@nx/node": "20.8.2",
    "@nx/web": "20.8.2",
    "@nx/webpack": "20.8.2",
    "@nx/workspace": "20.8.2",
    "@swc/core": "~1.13.5",
    "@swc/helpers": "~0.5.11",
    "@swc/jest": "^0.2.39",
    "@swc-node/register": "^1.10.9",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "eslint": "^9.8.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-html-reporters": "3.1.7",
    "nx": "20.8.2",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "verdaccio": "^6.0.5",
    "webpack-cli": "^5.1.4"
  },
  "nx": {
    "includedScripts": [

    ]
  }
}
