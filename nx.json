{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.mjs",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s",
      "!{projectRoot}/**/*.md",
      "!{projectRoot}/**/*.stories.[jt]s?(x)",
      "!{projectRoot}/**/*.story.[jt]s?(x)"
    ],
    "testing": [
      "{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?",
      "{projectRoot}/jest.config.[jt]s",
      "{projectRoot}/tsconfig.spec.json",
      "{projectRoot}/src/test-setup.[jt]s",
      "{projectRoot}/test-setup.[jt]s"
    ],
    "linting": [
      "{projectRoot}/**/*.[jt]s?(x)",
      "{projectRoot}/.eslintrc.json",
      "{projectRoot}/eslint.config.mjs",
      "{projectRoot}/tsconfig.json",
      "{projectRoot}/tsconfig.*.json"
    ],
    "go": [
      "{projectRoot}/**/*.go",
      "{projectRoot}/go.mod",
      "{projectRoot}/go.sum",
      "{workspaceRoot}/go.work"
    ],
    "docker": [
      "{projectRoot}/Dockerfile",
      "{projectRoot}/.dockerignore",
      "{projectRoot}/docker-compose.yml"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/go.work",
      "{workspaceRoot}/pnpm-lock.yaml",
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/jest.config.ts",
      "{workspaceRoot}/jest.preset.js"
    ]
  },
  "plugins": [
    {
      "plugin": "@nx/webpack/plugin",
      "options": {
        "buildTargetName": "build",
        "serveTargetName": "serve",
        "previewTargetName": "preview",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      },
      "exclude": ["*-e2e/**/*"]
    },
    "@nx-go/nx-go",
    "@nx/eslint/plugin"
  ],
  "targetDefaults": {
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "outputs": ["{options.outputPath}"]
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production", "sharedGlobals"],
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}",
        "{projectRoot}/dist"
      ],
      "options": {
        "parallel": true
      }
    },
    "test": {
      "cache": true,
      "inputs": ["default", "^production", "testing", "sharedGlobals"],
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "coverage": true,
        "coverageReporters": ["text", "lcov", "html"],
        "coverageThreshold": {
          "global": {
            "branches": 70,
            "functions": 70,
            "lines": 70,
            "statements": 70
          }
        },
        "maxWorkers": "50%",
        "parallel": true
      }
    },
    "lint": {
      "cache": true,
      "inputs": ["linting", "sharedGlobals"],
      "options": {
        "parallel": true
      }
    },
    "@nx/js:swc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "options": {
        "parallel": true
      }
    },
    "check-boundaries": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": ["sharedGlobals"],
      "options": {
        "command": "nx graph --file=graph.json && nx graph --affected --file=affected-graph.json",
        "parallel": true
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": ["default", "sharedGlobals"],
      "options": {
        "command": "biome format --write .",
        "parallel": true
      }
    }
  },
  "cacheDirectory": ".nx/cache",
  "neverConnectToCloud": true,
  "parallel": 5,
  "release": {
    "projectsRelationship": "independent",
    "releaseTagPattern": "{projectName}@v{version}",
    "projects": ["@scouts/*", "!@scouts/source"],
    "version": {
      "preVersionCommand": "pnpm nx run-many -t build",
      "conventionalCommits": true,
      "generatorOptions": {
        "fallbackCurrentVersionResolver": "disk"
      }
    },
    "git": {
      "commit": true,
      "tag": true,
      "commitMessage": "chore(release): publish {version}",
      "tagMessage": "chore(release): publish {version}"
    },
    "publish": {
      "projects": ["@scouts/base-biome", "@scouts/logger-node", "@scouts/utils-nest", "@scouts/user-node" ]
    },
    "changelog": {
      "automaticFromRef": true,
      "createRelease": "github",
      "projectChangelogs": {
        "renderOptions": {
          "authors": true,
          "commitReferences": true,
          "versionTitleDate": true
        }
      },
      "workspaceChangelog": {
        "renderOptions": {
          "authors": true,
          "commitReferences": true,
          "versionTitleDate": true
        }
      }
    }
  }
}
