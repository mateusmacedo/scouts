{
	"name": "notifier-express",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "apps/notifier-express/src",
	"projectType": "application",
	"tags": [
		"type:app",
		"scope:public",
		"runtime:node",
		"layer:application",
		"visibility:private",
		"platform:express"
	],
	"targets": {
		"build": {
			"executor": "@nx/webpack:webpack",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/apps/notifier-express",
				"main": "apps/notifier-express/src/main.ts",
				"tsConfig": "apps/notifier-express/tsconfig.app.json",
				"target": "node",
				"compiler": "tsc",
				"generatePackageJson": true,
				"webpackConfig": "apps/notifier-express/webpack.config.js"
			},
			"configurations": {
				"development": {},
				"production": {}
			}
		},
		"serve": {
			"executor": "@nx/js:node",
			"options": {
				"buildTarget": "notifier-express:build",
				"port": 3001
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "apps/notifier-express/jest.config.ts",
				"passWithNoTests": true
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["apps/notifier-express/**/*.ts"]
			}
		},
		"biome-check": {
			"executor": "nx:run-commands",
			"options": {
				"command": "biome check --formatter-enabled=true .",
				"cwd": "{workspaceRoot}"
			}
		}
	}
}
