{
	"name": "express-notifier",
	"sourceRoot": "apps/express-notifier/src",
	"projectType": "application",
	"targets": {
		"build": {
			"executor": "@nx/webpack:webpack",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/apps/express-notifier",
				"main": "apps/express-notifier/src/main.ts",
				"tsConfig": "apps/express-notifier/tsconfig.app.json",
				"target": "node",
				"compiler": "tsc",
				"generatePackageJson": true,
				"webpackConfig": "apps/express-notifier/webpack.config.js"
			}
		},
		"serve": {
			"executor": "@nx/js:node",
			"options": {
				"buildTarget": "express-notifier:build",
				"port": 3001
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "apps/express-notifier/jest.config.ts",
				"passWithNoTests": true
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["apps/express-notifier/**/*.ts"]
			}
		}
	},
	"tags": ["type:app", "platform:express", "scope:notifier"]
}
