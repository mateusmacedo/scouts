{
	"name": "scouts/user-go-service",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"sourceRoot": "apps/user-go-service",
	"tags": ["type:app", "scope:internal"],
	"targets": {
		"build": {
			"executor": "@nx-go/nx-go:build",
			"options": {
				"main": "{projectRoot}/main.go"
			}
		},
		"serve": {
			"executor": "@nx-go/nx-go:serve",
			"options": {
				"main": "{projectRoot}/main.go"
			}
		},
		"test": {
			"executor": "@nx-go/nx-go:test"
		},
		"lint": {
			"executor": "@nx-go/nx-go:lint"
		},
		"tidy": {
			"executor": "@nx-go/nx-go:tidy"
		},
		"coverage": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"go test -cover -coverprofile=../../coverage/{projectRoot}/coverage.out -covermode=atomic ./...",
					"go tool cover -html=../../coverage/{projectRoot}/coverage.out -o ../../coverage/{projectRoot}/coverage.html"
				],
				"cwd": "{projectRoot}",
				"parallel": false
			},
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
		},
		"sync-go-deps": {
			"executor": "nx:run-commands",
			"options": {
				"command": "./scripts/sync-go-versions.sh",
				"cwd": "{workspaceRoot}"
			}
		},
		"nx-release-publish": {
			"executor": "nx:noop"
		}
	}
}
