{
	"name": "bff-nest",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"sourceRoot": "apps/bff-nest/src",
	"tags": [
		"type:app",
		"scope:internal",
		"runtime:node",
		"layer:application",
		"visibility:private",
		"platform:nest"
	],
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"outputs": ["{workspaceRoot}/dist/{projectRoot}"],
			"options": {
				"command": "webpack-cli build",
				"args": ["node-env=production"]
			}
		},
		"serve": {
			"executor": "@nx/js:node",
			"defaultConfiguration": "development",
			"options": {
				"buildTarget": "bff-nest:build"
			},
			"configurations": {
				"development": {
					"buildTarget": "bff-nest:build:development"
				},
				"production": {
					"buildTarget": "bff-nest:build:production"
				}
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "apps/bff-nest/jest.config.ts",
				"passWithNoTests": true
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"options": {
				"lintFilePatterns": ["apps/bff-nest/**/*.ts"]
			}
		},
		"biome-check": {
			"executor": "nx:run-commands",
			"options": {
				"command": "biome check --formatter-enabled=true .",
				"cwd": "{workspaceRoot}"
			}
		}
	}
}
