{
	"name": "@scouts/logger-node",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/logger-node/src",
	"projectType": "library",
	"release": {
		"version": {
			"generatorOptions": {
				"packageRoot": "dist/{projectRoot}",
				"currentVersionResolver": "git-tag",
				"fallbackCurrentVersionResolver": "disk"
			}
		}
	},
	"tags": ["type:lib", "scope:internal", "runtime:node", "layer:domain", "visibility:public"],
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/logger-node",
				"tsConfig": "libs/logger-node/tsconfig.lib.json",
				"packageJson": "libs/logger-node/package.json",
				"main": "libs/logger-node/src/index.ts",
				"generatePackageJson": true,
				"updateBuildableProjectDepsInPackageJson": true,
				"assets": [
					"libs/logger-node/*.md",
					{
						"input": "libs/logger-node",
						"glob": "LICENSE*",
						"output": "."
					},
					{
						"input": "libs/logger-node",
						"glob": "CHANGELOG.md",
						"output": "."
					}
				]
			}
		},
		"nx-release-publish": {
			"dependsOn": ["build"],
			"options": {
				"packageRoot": "dist/{projectRoot}"
			}
		},
		"biome-check": {
			"executor": "nx:run-commands",
			"options": {
				"command": "biome check --formatter-enabled=true .",
				"cwd": "{workspaceRoot}"
			}
		}
	}
}
