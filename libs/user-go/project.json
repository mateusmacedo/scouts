{
	"name": "@scouts/user-go",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "library",
	"sourceRoot": "libs/user-go",
	"tags": ["type:lib", "scope:internal"],
	"targets": {
		"test": {
			"executor": "@nx-go/nx-go:test"
		},
		"lint": {
			"executor": "@nx-go/nx-go:lint"
		},
		"tidy": {
			"executor": "@nx-go/nx-go:tidy"
		},
		"coverage": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"go test -cover -coverprofile=../../coverage/{projectRoot}/coverage.out -covermode=atomic ./...",
					"go tool cover -html=../../coverage/{projectRoot}/coverage.out -o ../../coverage/{projectRoot}/coverage.html"
				],
				"cwd": "{projectRoot}",
				"parallel": false
			},
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
		}
	},
	"release": {
		"version": {
			"generator": "@nx/js:release-version",
			"generatorOptions": {
				"currentVersionResolver": "git-tag",
				"specifierSource": "prompt"
			}
		}
	}
}
