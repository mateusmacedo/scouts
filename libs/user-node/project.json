{
	"name": "@scouts/user-node",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/user-node/src",
	"projectType": "library",
	"release": {
		"version": {
			"generatorOptions": {
				"packageRoot": "dist/{projectRoot}",
				"currentVersionResolver": "git-tag",
				"fallbackCurrentVersionResolver": "disk"
			}
		}
	},
	"tags": ["type:lib", "scope:internal"],
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/user-node",
				"tsConfig": "libs/user-node/tsconfig.lib.json",
				"packageJson": "libs/user-node/package.json",
				"main": "libs/user-node/src/index.ts",
				"assets": ["libs/user-node/*.md"]
			}
		},
		"nx-release-publish": {
			"options": {
				"packageRoot": "dist/{projectRoot}"
			}
		},
		"lint": {
			"executor": "nx:run-commands",
			"options": {
				"commands": ["biome lint {projectRoot} --write", "eslint {projectRoot} --fix"],
				"cwd": "{workspaceRoot}"
			}
		},
		"format": {
			"executor": "nx:run-commands",
			"options": {
				"command": "biome format {projectRoot} --write",
				"cwd": "{workspaceRoot}"
			}
		}
	}
}
